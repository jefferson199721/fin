@model IEnumerable<Evaluacion_Final2.Models.Informacion>

@{
    ViewData["Title"] = "Index";
}

<h2>Lista de Informacion</h2>

<p>
    <a class="btn btn-primary" data-toggle="modal" data-target="#Ingreso_Informacion">Nueva Informacion</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Ubicacion
            </th>
            <th>
                Detalle
            </th>
            <th>
                Tamaño
            </th>
            <th>
                Nombre
            </th>
            <th>
                Fecha
            </th>
        </tr>
    </thead>
    <tbody id="Cuerpo_Informacion"></tbody>
</table>

<div class="modal fade" id="Ingreso_Informacion" tabindex="-1" role="dialog" aria-labelledby="EtiquetaModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close"
                        data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="EtiquetaModal">
                    Ingreso de Informacion
                </h4>
            </div>
            <div class="modal-body">
                <form>
                    <input type="hidden" name="idInformacion" id="idInformacion" />
                    <div class="form-group">
                        <label class="control-label">Ubicacion</label>
                        <input id="Ubicacion" name="Ubicacion" class="form-control"
                               type="text" placeholder="Ingrese la Ubicacion" />
                        <span class="label-danger hidden">Campo Obligatorio</span>
                    </div>

                    <div class="form-group">
                        <label class="control-label">Detalle</label>
                        <input id="Detalle" name="Detalle" class="form-control"
                               type="text" placeholder="Ingrese el Detalle de la informacion" />
                        <span id="control_Ubicacion" class="label-danger hidden">La Capacidad es requerida</span>
                    </div>

                    <div class="form-group">
                        <label class="control-label">Tamaño</label>
                        <input id="Tamaño" name="Tamaño" class="form-control"
                               type="text" placeholder="Ingrese el Tamaño" />
                        <span id="control_Detalle" class="label-danger hidden">El Tamaño es requerido</span>
                    </div>

                    <div class="form-group">
                        <label class="control-label">Nombre</label>
                        <input id="Nombre" name="Nombre" class="form-control"
                               type="text" placeholder="Ingrese el Nombre" />
                        <span id="control_Detalle" class="label-danger hidden">El Nombre es requerido</span>
                    </div>

                    <div class="form-group">
                        <label class="control-label">Fecha</label>
                        <input id="Fecha" name="Fecha" class="form-control"
                               type="date" placeholder="Ingrese la Fecha" />
                        <span id="control_Nombre" class="label-danger hidden">la Fecha es requerido</span>
                    </div>


                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal" onclick="">Cerrar</button>
                <button id="graba" type="button" class="btn btn-primary" onclick="nuevo_Informacion()">Guardar</button>
            </div>
        </div>
    </div>
