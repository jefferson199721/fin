@model Evaluacion_Final2.Models.Ubicacion

@{
    ViewData["Title"] = "Create";
}

<h2>Nueva Ubicacion</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Detalle" class="control-label"></label>
                <input asp-for="Detalle" class="form-control" />
                <span asp-validation-for="Detalle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="idDisco" class="control-label"></label>
                <select asp-for="idDisco" class ="form-control" asp-items="ViewBag.idDisco"></select>
            </div>
            <div class="form-group">
                <label asp-for="idInformacion" class="control-label"></label>
                <select asp-for="idInformacion" class ="form-control" asp-items="ViewBag.idInformacion"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
